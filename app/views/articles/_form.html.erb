

<div class="flex items-center justify-center ">

  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <%= form_with model: article, local: true, class: "" do |form| %>
      <%= article.errors.inspect %>
      <div class="mb-4">
        <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :title, class: "shadow appearance-none border-gray rounded w-full py-2 px-3 text-gray-300 leading-tight focus:outline-none focus:shadow-outline" %>
        <% article.errors.full_messages_for(:title).each do |message| %>
          <div class="text-red-500 text-xs mt-1"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <% article.errors.full_messages_for(:body).each do |message| %>
          <div class="text-red-500 text-xs mt-1"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :image, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.file_field :image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <% article.errors.full_messages_for(:image).each do |message| %>
          <div class="text-red-500 text-xs mt-1"><%= message %></div>
        <% end %>
      </div>
     
      <div class="flex items-center justify-end">
        <%= form.submit "Submit", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
