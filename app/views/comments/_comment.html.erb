<% unless comment.archived? %>

    <div class="border-t border-gray-200 pt-4 mt-4">
      <p class="font-medium text-gray-900"><strong>@</strong><%= comment.commenter %></p>
      <p class="text-gray-700 mt-1"><strong></strong><%= comment.body %></p>
      <div class="text-right">
      <%= link_to 'Delete', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700 text-sm' %>
    </div>
    </div>
   
<% end %>    
